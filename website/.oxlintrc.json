{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "unicorn", "oxc", "vue"],
  "env": {
    "browser": true
  },
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "perf": "error",
    "style": "error",
    "restriction": "error",
    "nursery": "error"
  },
  "ignorePatterns": ["dist/**", "dist-ssr/**", "coverage/**", "src/__generated/**", "script/**"],
  "rules": {
    "no-async-await": "off",
    "no-optional-chaining": "off",
    "no-rest-spread-properties": "off",
    "explicit-function-return-type": "off",
    "no-magic-numbers": "off",
    "sort-keys": "off",
    "sort-imports": "off",
    "filename-case": "off",
    "no-null": "off",
    "consistent-type-definitions": "off",
    "array-type": "off",
    "id-length": "off",
    "no-undef": "off",
    "define-props-destructuring": "off",
    "no-undefined": "off",
    "no-ternary": "off",
    "max-statements": "off",
    "max-lines": "off",
    "max-lines-per-function": "off",
    "func-style": "off",
    "arrow-body-style": "off",
    "no-inline-comments": "off",
    "init-declarations": "off",
    "max-props": "off",
    "prefer-number-properties": "off",
    "prefer-global-this": "off",
    "catch-error-name": "off",
    "no-array-for-each": "off",
    "no-useless-undefined": "off",
    "curly": "off",
    "no-console": "off",
    "no-alert": "off",
    "no-unsafe-member-access": "off",
    "no-unsafe-call": "off",
    "no-unsafe-assignment": "off",
    "no-unsafe-return": "off",
    "no-unsafe-argument": "off",
    "no-floating-promises": "off",
    "promise-function-async": "off",
    "strict-boolean-expressions": "off",
    "prefer-nullish-coalescing": "off",
    "explicit-module-boundary-types": "off",
    "no-implicit-coercion": "off",
    "switch-case-braces": "off",
    "prefer-spread": "off",
    "eslint/prefer-spread": "off",
    "unicorn/prefer-spread": "off",
    "no-document-cookie": "off",
    "sort-vars": "off",
    "prefer-destructuring": "off",
    "no-void": "off",
    "no-negated-condition": "off",
    "no-lonely-if": "off",
    "no-await-in-loop": "off",
    "no-non-null-assertion": "off",
    "no-import-type-side-effects": "off",
    "consistent-type-imports": "off",
    "numeric-separators-style": "off",
    "no-array-sort": "off",
    "consistent-existence-index-check": "off",
    "prefer-template": "off",
    "no-plusplus": "off",
    "no-continue": "off",
    "complexity": "off",
    "capitalized-comments": "off",
    "no-zero-fractions": "off",
    "prefer-dom-node-append": "off",
    "prefer-dom-node-remove": "off"
  }
}
